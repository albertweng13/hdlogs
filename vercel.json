{
  "version": 2,
  "buildCommand": "npm run build",
  "functions": {
    "api/index.js": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*\\.(html|css|js|json|ico|png|jpg|jpeg|svg|woff|woff2|ttf|eot))",
      "destination": "/src/frontend/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/src/frontend/index.html"
    }
  ]
}

