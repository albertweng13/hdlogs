{
  "name": "warbak-trainer",
  "version": "1.0.0",
  "description": "Web application for personal gym trainers to manage clients and workout data",
  "main": "src/api/routes.js",
  "type": "module",
  "scripts": {
    "dev": "node src/api/server.js",
    "start": "node src/api/server.js",
    "build": "echo '✅ Build completed'",
    "build:test": "npm run test && echo '✅ Build validation passed'",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=integration"
  },
  "keywords": [
    "trainer",
    "workout",
    "fitness",
    "google-sheets"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": "20.x"
  },
  "dependencies": {
    "express": "^4.18.2",
    "googleapis": "^126.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "@jest/globals": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  }
}

